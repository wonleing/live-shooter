<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" > 
		<shape>
			<gradient android:startColor="#ff8c00" android:endColor="#FFFFFF" android:angle="270" />
			<stroke android:width="1dp" android:color="#dcdcdc" /> 
			<corners android:radius="2dp"/>	
			<padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
		</shape>
	</item>
	<item android:state_focused="true" >
		<shape>
			<gradient android:startColor="#ffc2b7" android:endColor="#ffc2b7" android:angle="270" />
			<corners android:radius="1dp" />
		</shape>
	</item>
	<item android:state_first="true">
		<shape>
		    <gradient android:startColor="#80b335"	android:endColor="#80b335" android:angle="270" />
			<corners android:radius="1dp" />
		</shape>
	</item>	
	
</selector>
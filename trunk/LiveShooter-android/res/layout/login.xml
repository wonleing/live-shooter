<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:background="@drawable/bg"
    >     
    
    <RelativeLayout 
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="232dp"
        android:layout_margin="8dp"
        android:background="@drawable/style">
        
        <TextView  
			android:id="@+id/widget37"  
			android:layout_width="wrap_content"  
			android:layout_height="wrap_content"  
			android:layout_marginTop="5dp"
			android:text="账号"  
			android:textSize="18dp"
			android:padding="3dip"
			android:textColor="#000000"
			/>    
		<EditText  
			android:id="@+id/email"  
			android:layout_width="fill_parent"  
			android:layout_height="50dp"  
			android:singleLine="true"  
			android:layout_below="@+id/widget37"
			android:hint="用户名或邮箱"
			android:text=""  
			android:textSize="18dp"  
			android:background="@drawable/cornerstyle"
			/>  
			  
		<TextView  
			android:id="@+id/widget39"  
			android:layout_width="wrap_content"  
			android:layout_height="wrap_content"  
			android:text="密码"  
			android:textSize="18dp"
			android:padding="3dip"
			android:textColor="#000000"
			android:layout_below="@+id/email"
			/>  
			
		<EditText  
			android:id="@+id/pass"  
			android:layout_width="fill_parent"  
			android:layout_height="50dp"  
			android:text=""  
			android:singleLine="true"
			android:inputType="textPassword"
			android:textSize="18dp"  
			android:layout_below="@+id/widget39"
			android:background="@drawable/cornerstyle"
			/>  
			
		<Button 
		    android:id="@+id/loginBn"
		    android:layout_width="80dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/pass"
		    android:text="登  录"
		    android:textSize="16dp"
		    android:layout_marginTop="5dp"
		    android:background="@drawable/bnstyle"/>
    </RelativeLayout>
    
   	<RelativeLayout 
   	    android:id="@+id/tipinfo"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/logout"
   	    android:layout_marginLeft="8dp">
		
   	    <TextView
   	        android:id="@+id/info1"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="还没有账号?"
   	        android:textSize="16dp"
   	        android:textColor="#000000"/>
   	    
   	    <TextView
   	        android:id="@+id/info2"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/register"
   	        android:textSize="16dp"
   	        android:textColor="#CD0000"
   	        android:layout_marginLeft="3dp"
   	        android:layout_toRightOf="@+id/info1"
   	        />
   	    
   	    <TextView
   	        android:id="@+id/info3"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/rememberkey"
   	        android:textSize="16dp"
   	        android:textColor="#CD0000"
   	        android:layout_marginRight="8dp"
   	        android:layout_alignParentRight="true"
   	        />
   	    
   	</RelativeLayout>
   	
   	<ImageView 
   	    android:id="@+id/title"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/title"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="30dp"
  		android:layout_marginLeft="10dp"
  		android:layout_marginRight="10dp"
   	    android:layout_below="@+id/tipinfo"/>

   
</RelativeLayout>  
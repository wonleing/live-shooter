<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/itemlayout"
	android:layout_width="fill_parent"  
	android:layout_height="300dp" 
	>  
	
    <RelativeLayout 
        android:id="@+id/videolayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/sharelayout"
        >
        
        <ImageView 
            android:id="@+id/videobg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/itembg"/>
        
        <ImageView 
	        android:id="@+id/publish_userprofile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_alignParentLeft="true"/>
	    
	    <TextView 
		    android:id="@+id/title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textSize="28px"
		    android:textStyle="bold"
		    android:textColor="#000000"
		    android:layout_toRightOf="@+id/publish_userprofile"/>
	    
	    <TextView 
	        android:id="@+id/publish_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/publish_userprofile"
	        android:layout_below="@+id/title"
	        android:textSize="18dp"
	        android:textColor="#000000"/>
	    
	    <TextView 
	        android:id="@+id/time_ago"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/publish_username"
	        android:layout_below="@+id/title"
	        android:textSize="18dp"
	        android:textColor="#000000"/>
	    
	    <TextView 
	        android:id="@+id/time_last"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_alignParentRight="true"
	        android:textSize="18dp"
	        android:textColor="#000000"/>
	    
	    <ImageButton
		    android:id="@+id/play"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/icon_play"
		    android:background="@drawable/effect"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    />
    
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/sharelayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FF0000">
	    
        <ImageView 
            android:id="@+id/friend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_home_people"
            android:layout_alignParentLeft="true"/>
        
        <ImageButton 
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_list_share"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        
    </RelativeLayout>

</RelativeLayout>
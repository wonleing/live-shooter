<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_trans_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/item_trans_tv_weibo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/item_trans_iv"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="13sp" 
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"/>
    
    
    <TextView
        android:id="@+id/item_trans_tv_weibo_nick"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/item_trans_iv"
        android:layout_below="@id/item_trans_tv_weibo"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="11sp"
        android:text="名字名字" 
        android:layout_marginLeft="6dp"
        />
    
	
    <RelativeLayout 
        
        android:id="@+id/bindLayout"
        android:layout_toRightOf="@id/item_trans_tv_weibo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        >

		 <ImageView
		        android:id="@+id/item_trans_iv_arrow"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="10dip"
		        android:background="@drawable/arrow" 
		        android:contentDescription="@string/app_name"/>
		    
		            
        <TextView
		        android:id="@+id/item_trans_tv_isbind"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@+id/item_trans_iv_arrow"
		        android:padding="8dip"
		        android:text="@string/transfer_bind"
		        android:gravity="center"
		        android:textColor="#99dded"
		        android:textSize="18sp" />
        
    </RelativeLayout>
    
    <ToggleButton
            android:id="@+id/transferToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip" 
            android:layout_centerVertical="true"
            
            />

</RelativeLayout>